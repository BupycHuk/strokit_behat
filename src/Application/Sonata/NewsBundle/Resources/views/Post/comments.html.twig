<ul>
    {% for comment in pager.results %}
        <li>
            <div class="grey-who">{{ comment.name }} / {{ comment.createdAt | format_date }}</div>
            <div class="comment">
                <p>
                    {{ comment.message }}
                </p>
            </div>
        </li>
    {% endfor %}
</ul>