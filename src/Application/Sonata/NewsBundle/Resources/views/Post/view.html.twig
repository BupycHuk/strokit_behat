<div class="full-block">
    <div class="scroll-block">
        <div class="popup-pad">
            <div class="news-full">
                <h1>{{ post.title }}</h1>
                <div class="date">{{ post.publicationDateStart | format_date }}</div>
                {{ post.content|raw }}
            </div>

            <div class="share">
                <ul>
                    <li><a href="#"><img src="/img/facebook.png" alt="Facebook"></a></li>
                    <li><a href="#"><img src="/img/gplus.png" alt="Google+"></a></li>
                    <li><a href="#"><img src="/img/twitter.png" alt="twitter"></a></li>
                    <li><a href="#"><img src="/img/vk.png" alt="ВКонтакте"></a></li>
                    <li><a href="#"><img src="/img/mailru.png" alt="Mail ru"></a></li>
                    <li class="last"><a href="#"><img src="/img/oneeye.png" alt="Одноглазники"></a></li>
                </ul>
                <div class="clear"></div>
            </div>

            <div class="tags">
                {% for tag in post.tags%}
                    <a href="{{ url('sonata_news_tag', {'tag': tag.slug} ) }}">{{ tag.name }}</a>
                    {% if not loop.last%}, {%endif%}
                {% endfor %}
            </div>


            <div class="comments">
                <a class="blue-button button open-comment-form" href="#">написать комментарий</a>
                <h2>Комментарии</h2>
            {% if post.iscommentable %}
                {% render(controller('SonataNewsBundle:Post:addCommentForm', {
                'postId': post.id,
                'form': form
                })) %}
            {% endif %}

            {% render(controller('SonataNewsBundle:Post:comments', {'postId': post.id})) %}
            <div class="clear"></div>
        </div>


        </div>
    </div>
</div>
